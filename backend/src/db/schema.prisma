datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model book {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title String
  author String
  coverImage String 
  totalPages Int
  pagesRead Int? @default(0)
  notes String? 
  startDate DateTime @default(now()) @db.Date
  completionDate DateTime? @db.Date
}